diff --git a/mm/memcontrol.c b/mm/memcontrol.c
index b9419a3605eb..827879d8d447 100644
--- a/mm/memcontrol.c
+++ b/mm/memcontrol.c
@@ -2150,6 +2150,12 @@ struct mem_cgroup *lock_page_memcg(struct page *page)
 	if (unlikely(!memcg))
 		return NULL;
 
+#ifdef CONFIG_PROVE_LOCKING
+	local_irq_save(flags);
+	might_lock(&memcg->move_lock);
+	local_irq_restore(flags);
+#endif
+
 	if (atomic_read(&memcg->moving_account) <= 0)
 		return memcg;
 
