-		err = ntfs_acl_chmod(mnt_userns, inode);
+		err = ntfs_acl_chmod(&init_user_ns, inode);
 		if (err)
 			goto out;
 
@@ -1028,10 +1028,11 @@ static ssize_t ntfs_compress_write(struct kiocb *iocb, struct iov_iter *from)
